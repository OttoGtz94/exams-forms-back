{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "./src",
		"baseUrl": ".",
		"paths": {
			"@routes/*": ["./src/routes/*"],
			"@controller/*": ["./src/controllers/*"],
			"@model/*": ["./src/models/*"],
			"@helpers/*": ["./src/helpers/*"],
			"@interfaces/*": ["./src/interfaces/*"],
			"@helpers/*": ["./src/helpers/*"]
		},
		"typeRoots": ["./node_modules/@types"],
		"allowJs": true,
		"outDir": "build",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
